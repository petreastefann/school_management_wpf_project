<UserControl x:Class="school_management_wpf_project.Views.LoginOrRegisterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:school_management_wpf_project.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <TextBlock Text="Username:"/>
            <TextBox Text="{Binding Username}"/>
            <TextBlock Text="Password:"/>
            <TextBox Text="{Binding Password}"/>
            <Button Content="Login" Command="{Binding LoginCommand}"/>
        </StackPanel>

        <StackPanel Grid.Row="1">
            <TextBlock Text="Username:"/>
            <TextBox Text="{Binding Username}"/>
            <TextBlock Text="Password:"/>
            <TextBox Text="{Binding Password}"/>
            <TextBlock Text="User Type:"/>
            <ComboBox ItemsSource="{Binding UserTypes}" SelectedItem="{Binding UserType}"/>
            <Button Content="Register" Command="{Binding RegisterCommand}"/>
        </StackPanel>
    </Grid>
</UserControl>
