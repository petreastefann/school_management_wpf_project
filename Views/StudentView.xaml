<UserControl x:Class="school_management_wpf_project.Views.StudentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:school_management_wpf_project.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TextBlock>
            <Run Text="welcome, "/>
            <Run Text="{Binding User.Username}"/>
        </TextBlock>
        <TextBlock Text="STUDENT VIEW" VerticalAlignment="Center" HorizontalAlignment="Center"/>

        <Button Content="teaching material" Height="30" Width="100" Margin="0,300,560,0" Click="Button_Click"/>
        <Button Content="all grades" Height="30" Width="100" Margin="0,300,260,0" Click="Button_Click_1"/>
        <Button Content="all absente" Height="30" Width="100" Margin="0,300,0,0" Click="Button_Click_2"/>
        <Button Content="all averages" Height="30" Width="100" Margin="300,300,0,0" Click="Button_Click_3"/>
    </Grid>
</UserControl>
